    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/Widget.Shrine.Backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="100dp"
            android:paddingBottom="100dp">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/friutsButton"
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_fruits" />
            <!-- TODO: add id to all button just  like above  -->

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vegetables" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seeds" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flowers" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grains" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:text="pulses" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cereals" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dairy products" />


        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/app_bar"
                style="@style/Widget.Shrine.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                app:navigationIcon="@drawable/shr_menu"
                app:title="@string/app_name"

                />
        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
            android:id="@+id/product_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"

            android:background="@color/productGridBackgroundColor"
            android:elevation="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/storeRecycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/shr_list_margin"

                android:layout_marginTop="@dimen/shr_list_margin"

                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </FrameLayout>


    </FrameLayout>


</layout>

